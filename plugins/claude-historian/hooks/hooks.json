{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebSearch|WebFetch",
        "hooks": [{
          "type": "command",
          "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/claude-historian/hooks/pre-websearch.js"
        }],
        "description": "Check historian before web research"
      },
      {
        "matcher": "EnterPlanMode",
        "hooks": [{
          "type": "command",
          "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/claude-historian/hooks/pre-planning.js"
        }],
        "description": "Check historian before planning mode"
      },
      {
        "matcher": "Task",
        "hooks": [{
          "type": "command",
          "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/claude-historian/hooks/pre-task.js"
        }],
        "description": "Check historian before launching agents"
      }
    ],
    "PostToolUse": [{
      "matcher": "Bash",
      "hooks": [{
        "type": "command",
        "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/claude-historian/hooks/post-error.js"
      }],
      "description": "Suggest error solutions after command failures"
    }]
  }
}
